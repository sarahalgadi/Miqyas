<body>

  <!--{facultyNames,  department, semester-->
    <div class="container">
        <h1 style="background-color: #15416e; height: 5rem;color: white; padding: 20px; font-family: Arial, Helvetica, sans-serif; font-size: 25px;">
          <%= department %> Department Faculty Members</h1>
        <table class="table  table-bordered  table-striped table-hover" >
          <thead>
            <tr>
              <th scope="col">Faculty Name</th>
              <th scope="col">Username</th>
              <th scope="col">Roles</th>
            </tr>
          </thead>
          <tbody>
            <% facultyNames.forEach(function(faculty) { %>
              <tr>
                <td class="col"><%= faculty.fullName %></td>
                <td class="col"><%= faculty.username %></td>
                <td class="col">
                   <label>
                  <input type="checkbox" name="dccCheckbox"> DCC
                  </label>
                  <br>
                  <label>
                  <input type="checkbox" name="qaCheckbox"> QA
                  </label></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
        <form action="/save-roles/<%= department %>/<%= semester %>/username" method="post">
          <button type="submit" class="btn btn-primary " style="background-color: #15416e;">Save Roles</button>
       </form>
      </div>
