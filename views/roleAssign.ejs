<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
  crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="../stylesheets/style.css">
  <title>Faculty List</title>
</head>
<body>

  <!--{facultyNames,  department, semester-->
    <div class="container">
        <h1 style="background-color: #15416e; height: 5rem;color: white; padding: 20px; font-family: Arial, Helvetica, sans-serif; font-size: 25px;">
          <%= department %> Department Faculty Members</h1>
        <form action="/save-roles/<%= semester %>" method="post">
        <table class="table  table-bordered  table-striped table-hover" >
          <thead>
            <tr>
              <th scope="col">Faculty Name</th>
              <th scope="col">Username</th>
              <th scope="col">Roles</th>
            </tr>
          </thead>
          <tbody>
            <% facultyNames.forEach(function(faculty) { %>
              <tr>
                <td class="col"><%= faculty.fullName %></td>
                <td class="col"><%= faculty.username %></td>
                <td class="col">
                  <label>
                    <input type="checkbox" name="department curriculum committee" value="<%= faculty.username %>"> Curriculum Committee
                  </label>
                  <br>
                  <label>
                    <input type="checkbox" name="quality assurance" value="<%= faculty.username %>"> Qaulity Assurance
                  </label>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
          <button type="submit" class="btn btn-primary " style="background-color: #15416e;">Save Roles</button>
       </form>
      </div>
  </body>
</html> 
  

